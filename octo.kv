#:kivy 1.9.1

<Octo>:    
    do_default_tab: False
    serverTab: ost
    OctoServersTab:
        id: ost

<OctoOverlay>:
    octo: octo_id
    sb: settings_button
    Octo:
        id: octo_id
        size_hint: (1,1)
    Button:
        size: 45,45
        size_hint: 0,0
        pos: root.width-45,root.height-46
        id: settings_button
        text: root.settings_string
        on_release: app.open_settings()

<OctoServersTab>:
    grid: server_grid
    GridLayout:
        id: server_grid
        cols: 4
        spacing: 5,5
        padding: 5,5,5,5

<OctoLauncher>:
    height: 200
    size_hint_x:None
    width: 200
    size_hint_y:None
    on_release: app.open_connection(self.config)

<OctoServer>:
    info_panel: ipanel
    PageLayout:
        id: ipanel
        
